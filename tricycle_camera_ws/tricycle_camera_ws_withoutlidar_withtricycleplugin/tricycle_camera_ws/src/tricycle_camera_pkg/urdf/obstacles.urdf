<?xml version="1.0" ?>
<robot name="obstacles">

  <!-- Base link - Blue Box -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- Yellow Box -->
  <link name="yellow_box">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="base_to_yellow" type="fixed">
    <parent link="base_link"/>
    <child link="yellow_box"/>
    <origin xyz="0.5 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Red Box -->
  <link name="red_box">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="base_to_red" type="fixed">
    <parent link="base_link"/>
    <child link="red_box"/>
    <origin xyz="0 0.5 0" rpy="0 0 0"/>
  </joint>

  <!-- Green Box -->
  <link name="green_box">
    <visual>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white">
        <color rgba="1 1 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="base_to_green" type="fixed">
    <parent link="base_link"/>
    <child link="green_box"/>
    <origin xyz="-0.5 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo colors -->
  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>

  <gazebo reference="yellow_box">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <gazebo reference="red_box">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="green_box">
    <material>Gazebo/Green</material>
  </gazebo>

  <!-- Make the object static in Gazebo -->
  <gazebo>
    <static>true</static>
  </gazebo>

</robot>